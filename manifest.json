{
  "manifest_version": 3,
  "name": "BlinkNote",
  "version": "0.1.0",
  "description": "Capture ideas from anywhere with a permanent side panel.",
  "permissions": ["storage", "contextMenus", "sidePanel", "activeTab"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "action": {
    "default_title": "Open BlinkNote"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
